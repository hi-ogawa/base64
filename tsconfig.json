{
  "include": ["src"],
  "compilerOptions": {
    "outDir": "build/tsc",
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["DOM", "ES2015"],
    "types": ["node"],
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  }
}
